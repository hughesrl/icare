<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:right="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/orange" />
            <stroke android:width="0dp" android:color="@color/white" />
            <corners
                android:topLeftRadius="@dimen/rounded_corners"
                android:bottomLeftRadius="@dimen/rounded_corners"
                android:topRightRadius="0.1dp"
                android:bottomRightRadius="0.1dp" />
        </shape>
    </item>
    <item android:right="@dimen/drawable_right" android:left="@dimen/drawable_left" android:top="@dimen/drawable_top" android:bottom="@dimen/drawable_bottom">
        <bitmap android:src="@drawable/ic_password_large" />
    </item>
</layer-list>