<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:icare="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCloseMenuSymptom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        />

    <RelativeLayout
        android:layout_below="@+id/btnCloseMenuMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_corners_container_wth_transparency">
        <com.fourello.icare.view.CustomTextView
            icare:fontName="VAGRoundedLight.ttf"
            icare:fontStyle="bold"
            icare:fontColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEW SYMPTOM"
            android:id="@+id/pageTitle"
            android:layout_gravity="center_horizontal"
            style="@style/text_Appearance_large_container_title_light"
            android:shadowColor="@android:color/background_dark"
            android:background="@drawable/rounded_corners_container_title_bg" />

        <!-- FIELDS -->
        <ScrollView
            android:layout_below="@+id/pageTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:background="@drawable/dialog_background"
            >
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblSymptomSubject"
                        android:text="@string/lblSymptomSubject"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/etSymptomSubject"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblSymptomSymptoms"
                        android:text="@string/lblSymptomSymptoms"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/etSymptomSymptoms"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblSymptomNotes"
                        android:text="@string/lblSymptomNotes"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/etSymptomNotes"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:ems="10"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblSymptomQuestion"
                        android:text="@string/lblSymptomQuestion"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:id="@+id/etSymptomQuestion"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:lineSpacingExtra="5dp"
                        android:ems="10"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblSymptomAttachPhoto"
                        android:text="@string/lblSymptomAttachPhoto"
                        />

                    <!--<com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:isEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/etClinicsName"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblClinicsName"
                        android:layout_weight="1"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.fourello.icare.view.CustomButton
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontStyle="bold"
                        icare:fontColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lblSymptomSave"
                        android:id="@+id/btnSaveNewSymptom"
                        android:background="@drawable/custom_button"
                        android:layout_gravity="center_horizontal"
                        style="@style/button_appearance" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
