<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:icare="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_below="@+id/btnShowMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corners_container_wth_transparency">
        <com.fourello.icare.view.CustomTextView
            icare:fontName="VAGRoundedLight.ttf"
            icare:fontStyle="bold"
            icare:fontColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_visit_tracker"
            android:id="@+id/pageTitle"
            android:layout_gravity="center_horizontal"
            style="@style/text_Appearance_large_container_title_light"
            android:shadowColor="@android:color/background_dark"
            android:background="@drawable/rounded_corners_container_title_bg" />
        <ScrollView
            android:layout_below="@+id/pageTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_marginTop="5dp"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/checkInLayout">
                <LinearLayout
                    android:padding="@dimen/patient_photo_background_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_circle_big">
                    <ImageView
                        android:id="@+id/patient_photo"
                        android:contentDescription="@string/app_name"
                        android:layout_width="@dimen/patient_photo_size"
                        android:layout_height="@dimen/patient_photo_size"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblPatientsName"
                        android:text="@string/lblPatientsName"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:isEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/etPatientsName"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblPatientsName"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblAge"
                        android:text="@string/lblAge"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etAge"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblAccompaniedBy"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblAccompaniedBy"
                        android:text="@string/lblAccompaniedBy"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etAccompaniedBy"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblAccompaniedBy"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblPurpose"
                        android:text="@string/lblPurpose"
                        />

                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etPurpose"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblPurpose"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblPatientNotes"
                        android:text="@string/lblPatientNotes"
                        />
                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etPatientNotes"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblAccompaniedBy"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblTypeOfDelivery"
                        android:text="@string/lblTypeOfDelivery"
                        />
                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etTypeOfDelivery"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblTypeOfDelivery"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblAllergyRisk"
                        android:text="@string/lblAllergyRisk"
                        />
                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etAllergyRisk"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:singleLine="true"
                        android:hint="@string/lblAllergyRisk"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">
                    <include layout="@layout/growth_tracker"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblVaccinationsTaken"
                        android:text="@string/lblVaccinationsTaken"
                        />
                    <ListView
                        android:layout_weight="1"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:id="@+id/vaccinationsTaken"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient_shape_bus_title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblMedicationsTaken"
                        android:text="@string/lblMedicationsTaken"
                        />
                    <ListView
                        android:layout_weight="1"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:id="@+id/medicationsTaken"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_gradient_shape_bus_title"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblInstructions"
                        android:text="@string/lblInstructions"
                        />
                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etInstructions"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/lblAllergyRisk"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.fourello.icare.view.CustomTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        icare:fontColor="@color/white"
                        style="@style/text_Appearance_large_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="3"
                        android:id="@+id/lblNextVisit"
                        android:text="@string/lblNextVisit"
                        />
                    <com.fourello.icare.view.CustomEditTextView
                        icare:fontName="VAGRoundedLight.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etNextVisit"
                        android:drawableStart="@drawable/custom_edittext_no_drawable_left"
                        android:drawableLeft="@drawable/custom_edittext_no_drawable_left"
                        android:background="@drawable/rounded_corners"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/lblNextVisit"
                        android:layout_weight="1"/>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>