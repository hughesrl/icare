<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:icare="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCloseMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_centerInParent="true"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_layout_height"
            android:layout_centerInParent="true"
            android:gravity="center">
            <com.fourello.icare.view.CustomTextView
                android:paddingTop="30dp"
                icare:fontName="VAGRoundedLight.ttf"
                icare:fontStyle="normal"
                icare:fontColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/userName"
                android:layout_gravity="center_horizontal"
                style="@style/text_Appearance_large_title_light"
                android:shadowColor="@android:color/background_dark"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menuBG"
                android:src="@drawable/menu_bg"
                android:padding="60dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMyPatients"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu_my_patients"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"/>

            <!--android:layout_width="230dp"-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnMyPicture"
                android:background="@android:color/transparent"
                android:src="@drawable/doctor_icon_circle"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/btnMyPatients"
                android:layout_toLeftOf="@+id/btnSettings"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSettings"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu_settings"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"

                 />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMyClinic"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_menu_my_clinic"
                    android:scaleType="fitCenter"
                    android:layout_weight="2" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight=".1" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMyReports"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_menu_my_reports"
                    android:scaleType="fitCenter"
                    android:layout_weight="2" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            android:gravity="center">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:id="@+id/listSubMenu"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal" />
        </RelativeLayout>
    </LinearLayout>-->



</RelativeLayout>
